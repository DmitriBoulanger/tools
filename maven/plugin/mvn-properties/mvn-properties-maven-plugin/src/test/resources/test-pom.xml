<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.dbo.tools.maven.plugin.test</groupId>
	<artifactId>mvn-properties-maven-plugin-test</artifactId>
	<version>0.0.0-SNAPSHOT</version>

	<build>
		<plugins>
			<plugin>
				<groupId>de.dbo.tools.maven.plugin</groupId>
				<artifactId>mvn-properties-maven-plugin</artifactId>
				<version>${project.version}</version>
				<executions>
					<execution>
						<id>read-properties</id>
						<phase>initialize</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<filePaths>
						<filePath>versions.properties</filePath>
					</filePaths>
					<files>
						<file>versions.properties</file>
					</files>
				</configuration>
				<!-- Any jars that host the required properties files here -->
				<dependencies>
					<dependency>
						<groupId>${project.groupId}</groupId>
						<artifactId>container</artifactId>
						<version>0.0.0-SNAPSHOT</version>
					</dependency>

				</dependencies>
			</plugin>
		</plugins>
	</build>
</project>